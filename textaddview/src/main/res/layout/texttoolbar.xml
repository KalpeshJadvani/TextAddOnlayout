<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ListView
        android:id="@+id/fontname_list"
        android:visibility="invisible"
        android:layout_above="@+id/toolset"
        android:background="@drawable/rounded_control"
        android:layout_width="250dp"
        android:layout_height="250dp">
    </ListView>

    <ListView
        android:id="@+id/fontsize_list"
        android:visibility="invisible"
        android:layout_above="@+id/toolset"
        android:background="@drawable/rounded_control"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="250dp">
    </ListView>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/toolset"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/too_button_margin"
            android:layout_marginLeft="@dimen/too_button_margin"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_height="35dp"
                android:layout_width="match_parent"
                android:background="@drawable/textbutton"
                android:id="@+id/toolbar_font"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/too_button_margin"
            android:layout_marginLeft="@dimen/too_button_margin"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_height="35dp"
                android:layout_width="match_parent"
                android:background="@drawable/fontsizebutton"
                android:id="@+id/toolbar_fontsize"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/too_button_margin"
            android:layout_marginLeft="@dimen/too_button_margin"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_height="35dp"
                android:layout_width="match_parent"
                android:background="@drawable/textcolorbutton"
                android:id="@+id/toolbar_fontcolor"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/too_button_margin"
            android:layout_marginLeft="@dimen/too_button_margin"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_height="35dp"
                android:layout_width="match_parent"
                android:background="@drawable/boldbutton"
                android:id="@+id/toolbar_bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/too_button_margin"
            android:layout_marginLeft="@dimen/too_button_margin"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_height="35dp"
                android:layout_width="match_parent"
                android:background="@drawable/italicbutton"
                android:id="@+id/toolbar_italic"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/too_button_margin"
            android:layout_marginLeft="@dimen/too_button_margin"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_height="35dp"
                android:layout_width="match_parent"
                android:background="@drawable/underlinebutton"
                android:id="@+id/toolbar_underline"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

